

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.abhinav.cricker.VoiceModeActivity">

    <TextView
        android:id="@+id/txt_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text=""
        android:textSize="26dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/translated_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/txt_output"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:paddingTop="50dp"
        android:text=""
        android:textSize="26dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/wic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Wickets: " />

    <TextView
        android:id="@+id/wickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/wic"
        android:paddingTop="20dp"
        android:text="" />

    <TextView
        android:id="@+id/runsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wic"
        android:paddingLeft="20dp"
        android:text="Runs: " />

    <TextView
        android:id="@+id/runs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wic"
        android:layout_toEndOf="@+id/runsText"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_mic"
            android:layout_width="65dp"
            android:layout_height="65dp"

            android:backgroundTint="@android:color/transparent"
            android:foregroundGravity="top|bottom|left"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mic"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>



